{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
      {
      "src": "/api",
      "dest": "src/main.ts"
    }
  ],

  "crons": [{
    "path": "/poll",
    "schedule": "0 10 * * *"
  }],

  "outputDirectory": "dist"
}